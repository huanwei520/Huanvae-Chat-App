{
  "$schema": "../gen/schemas/mobile-schema.json",
  "identifier": "mobile-default",
  "description": "移动端权限配置 (Android/iOS)",
  "platforms": ["android", "iOS"],
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    "fs:allow-stat",
    "fs:read-all",
    "fs:allow-copy-file",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-exists",
    "fs:allow-appdata-write-recursive",
    "dialog:default",
    "notification:default",
    "notification:allow-is-permission-granted",
    "notification:allow-request-permission",
    "notification:allow-notify",
    "process:default",
    "process:allow-exit",
    "os:default",
    "os:allow-hostname",
    "os:allow-arch",
    "os:allow-platform",
    "os:allow-version",
    "keystore:default",
    "biometric:default",
    "biometric:allow-authenticate",
    "biometric:allow-status",
    "mobile-onbackpressed-listener:allow-register-back-event",
    "mobile-onbackpressed-listener:allow-registerListener",
    "store:default",
    "android-fs:all",
    {
      "identifier": "android-fs:scope",
      "allow": [
        "$APPDATA/**/*",
        "$APPCACHE/**/*",
        "$APPLOCALDATA/**/*"
      ]
    },
    "android-package-install:default",
    "android-package-install:allow-check-permissions",
    "android-package-install:allow-request-permissions",
    "android-package-install:allow-install",
    "core:window:allow-show",
    "core:window:allow-hide",
    "core:window:allow-set-focus",
    {
      "identifier": "fs:scope",
      "allow": [
        "$DATA/**",
        "$LOCALDATA/**",
        "$APPDATA/**",
        "$PICTURE/**",
        "$VIDEO/**",
        "$DOCUMENT/**",
        "$DOWNLOAD/**"
      ]
    },
    {
      "identifier": "http:default",
      "allow": [
        { "url": "http://*:*/**" },
        { "url": "https://*:*/**" },
        { "url": "http://*/**" },
        { "url": "https://*/**" }
      ]
    }
  ]
}
